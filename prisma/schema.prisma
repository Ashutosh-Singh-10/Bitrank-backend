datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  email         String    @id @unique
  username      String    @unique
  password      String?
  googleId      String?   @unique
  verified      Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt



  refreshTokens RefreshToken[]
  otp           OTP?


  codeforces Codeforces?
  leetcode Leetcode?
  collegeName  String
  college  College   @relation(fields: [collegeName], references: [collegeName])
  
}

model RefreshToken {
  email     String   @id
  token     String   @unique
  expiry    DateTime
  user      User     @relation(fields: [email], references: [email])
}

model OTP {
  email     String   @id
  otp       Int
  expiry    DateTime
  user      User     @relation(fields: [email], references: [email])
}

model Codeforces{
  username String @id
  Rating Int 
  Qns Int 
  Ranking Int
  email  String @unique
  user User @relation(fields : [email],references:[email])
}
model Leetcode{
  username String @id
  Rating Int 
  Qns Int 
  Ranking Int
  email  String @unique
  user User @relation(fields : [email],references:[email])
}

model College{
  collegeName String  @id 
  user User[]
}
